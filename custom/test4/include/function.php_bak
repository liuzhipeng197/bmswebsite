function cut_title($title,$length)
{
//$length  ;ÎÒÃÇÔÊĞí×Ö·û´®ÏÔÊ¾µÄ×î´ó³¤¶È
        if (strlen($title)>$length) {
                $temp = 0;
                for($i=0; $i<$length; $i++)
                        if (ord($title[$i]) > 128) $temp++;
                        if ($temp%2 == 0)
                        $title = substr($title,0,$length)."...";
                        else
                        $title = substr($title,0,$length+1)."...";
                }
                        return $title;
}


	

